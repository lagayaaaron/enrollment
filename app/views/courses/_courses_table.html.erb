<table class="table">
    <thead>
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody id="courses">
    <% @courses.each do |course| %>
        <tr id="<%= dom_id course %>">
        <td><%= course.code %></td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td>
            <%= link_to "Show", course, class: "btn btn-default" %>
            <%= link_to "Edit", edit_course_path(course), class: "btn btn-primary" %>
            <%= link_to "Delete", course, method: :delete, data: { confirm: "Are you sure you want to delete this course?" }, class: "btn btn-danger" %>
        </td>
        </tr>
    <% end %>
    </tbody>
</table>
