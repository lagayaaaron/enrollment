<h1>All Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
    <th>Username</th></th>
      <th>Email</th>
      <th>Name</th>
      <th>Course</th>
      <th>Year</th>
      <th>Sem</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.public_uid if user.public_uid.present?%></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.profile.name if user.profile&.name.present? %></td>
        <td><%= user.course.name if user.course&.name.present?%></td>
        <td><%= user.year %></td>
        <td><%= user.sem %></td>
        <td><%= link_to 'Edit User Account', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Edit Profile', edit_admin_user_profile_path(user) %></td>
        <td><%= link_to "Delete", admin_user_path(user), data: { turbo_method: :delete , turbo_confirm: "Are you sure?"}, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
