<h1>Edit Student Profile</h1>

<%= form_for [:admin, @student, @student_profile], url: admin_student_path(@student, @student_profile), method: :put do |f| %>
<%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, options_for_select(['Male', 'Female', 'Other'], @student.profile.gender) %>
  </div>

  <div class="field">
    <%= f.label :birthdate %>
    <%= f.date_select :birthdate, :start_year => Date.today.year - 100, :end_year => Date.today.year - 5 %>
  </div>

  <div class="field">
    <%= f.label :contact_number %>
    <%= f.text_field :contact_number %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <div class="actions">
    <%= f.submit "Update Profile", class: "btn btn-primary" %>
  </div>
  <%= link_to 'Delete Profile', admin_students_path, method: :delete, data: { confirm: 'Are you sure you want to delete this profile?' }, class: 'btn btn-danger' %>

<% end %>

